{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<h1 class="my-8 text-center font-bold text-5xl">Inscription</h1>
	<p class="my-4 text-center text-lg">Créez un compte et découvrez tous nos univers : culture, tech et bien d'autres !</p>
	<section class="p-5">
		{{ form_errors(registrationForm) }}
		{{ form_start(registrationForm, {"attr":{"class":"flex flex-col items-center"}}) }}

		<div class="flex flex-col md:flex-row mb-5 gap-2 w-full justify-center">
			{{ form_widget(registrationForm.email) }}
			{{ form_widget(registrationForm.pseudo) }}
		</div>

		<div class="flex flex-col md:flex-row mb-5 gap-2 w-full justify-center">
			{{ form_widget(registrationForm.plainPassword.first) }}
			{{ form_widget(registrationForm.plainPassword.second) }}
		</div>

		<div class="flex flex-row mb-5">
			{{ form_row(registrationForm.agreeTerms) }}
		</div>

		<button type="submit" class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">S'inscrire</button>
		{{ form_end(registrationForm) }}
	</section>
{% endblock %}
